{
  "name": "@bbc/audio-orchestration-bbcat-js",
  "version": "0.0.1",
  "description": "Lite version of the BBC Audio Toolkit for use in audio orchestration projects",
  "main": "dist/bbcat.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "yarn run lint && yarn run test && yarn run doc && yarn run webpack",
    "start": "webpack-dev-server --inline --hot --devtool source-map --progress --colors --content-base dist --verbose",
    "webpack": "webpack --mode=production",
    "debug": "webpack --mode=development",
    "test": "karma start --singleRun",
    "watch:test": "karma start",
    "lint": "eslint src/ test/",
    "doc": "esdoc -c esdoc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/audio-orchestration.git"
  },
  "author": "BBC",
  "license": "Apache-2.0",
  "devDependencies": {}
}
